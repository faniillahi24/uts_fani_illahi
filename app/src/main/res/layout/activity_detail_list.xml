<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailList"
    android:background="#F5CB58">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/basaline_arrow_back_ios_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Page"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginLeft="120dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100sp"
        android:background="@color/white">


        <ImageView
            android:layout_marginTop="30dp"
            android:id="@+id/imagedetail"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded"
            app:srcCompat="@drawable/makan2" />

        <TextView
            android:id="@+id/txtdsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Chikkenfurry" />

        <TextView
            android:id="@+id/txtmkn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We'd love to know what you think of your dish."
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/star"
                />
            <ImageView
                android:id="@+id/ratingBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/star"
                />  <ImageView
            android:id="@+id/ratingBar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:src="@drawable/star"
            />

            <ImageView
                android:id="@+id/ratingBar5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/star"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            android:backgroundTint="#FBE8CA"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave Your Comment" />

        <EditText
            android:id="@+id/editTextText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:inputType="text"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded"
            android:paddingBottom="50dp"
            android:text="write messege" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnlistlgn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="#E95322"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#F4CBBE"/>
            <Button
                android:id="@+id/btnlistlgn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="0dp"

                android:backgroundTint="#E95322"/>

        </LinearLayout>

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>
